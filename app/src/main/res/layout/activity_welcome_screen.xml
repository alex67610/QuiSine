<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        tools:context="com.example.alex.quisine.MainActivity"
        android:background="@drawable/meal4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="290dp"
            android:layout_weight="0.12"
            android:weightSum="1">

            <EditText
                android:id="@+id/editTextUsername"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="0.86"
                android:backgroundTint="@color/colorRed"
                android:ems="10"
                android:fontFamily="sans-serif-smallcaps"
                android:hint="Email"
                android:inputType="text"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/colorBottomNavigationActiveColored"
                android:textColorHint="@color/colorBottomNavigationActiveColored"
                android:textSize="@dimen/bottom_navigation_icon"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="0dp"
            android:layout_weight="0.12"
            android:weightSum="1">


            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="0.86"
                android:backgroundTint="@color/colorRed"
                android:ems="10"
                android:fontFamily="sans-serif-smallcaps"
                android:hint="Password"
                android:inputType="textPassword"
                android:textAlignment="center"
                android:textColor="@color/colorBottomNavigationActiveColored"
                android:textColorHint="@color/colorBottomNavigationActiveColored"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <Button
            android:id="@+id/buttonLogin"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0.05"
            android:background="@color/colorRed"
            android:elevation="0dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Login"
            android:textColor="@color/colorBottomNavigationActiveColored"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonRegister"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.05"
            android:background="@color/colorRed"
            android:elevation="0dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Register"
            android:textColor="@color/colorBottomNavigationActiveColored"
            android:textStyle="bold" />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>