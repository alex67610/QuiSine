<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        tools:context="com.example.alex.quisine.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="0.06"
            android:weightSum="1">

            <TextView
                android:id="@+id/textViewFName"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="Enter your first name:"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textStyle="italic"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/editTextFName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="@color/colorRed"
                android:ems="10"
                android:fontFamily="sans-serif-smallcaps"
                android:hint="First Name"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="0.06"
            android:weightSum="1">

            <TextView
                android:id="@+id/textViewLName"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="Enter your last name:"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textStyle="italic"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/editTextLName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="@color/colorRed"
                android:ems="10"
                android:fontFamily="sans-serif-smallcaps"
                android:hint="Last Name"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="0.06"
            android:weightSum="1">

            <TextView
                android:id="@+id/textViewAgeUpdate"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="Enter your age:"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textStyle="italic"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/editTextAge"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="@color/colorRed"
                android:ems="10"
                android:fontFamily="sans-serif-smallcaps"
                android:hint="Age"
                android:inputType="number"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewYO"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="years old"
                android:textAllCaps="false"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="0.06"
            android:weightSum="1">

            <TextView
                android:id="@+id/textViewAddressUpdate"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="Enter your address:"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textStyle="italic"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/editTextAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="@color/colorRed"
                android:ems="10"
                android:fontFamily="sans-serif-smallcaps"
                android:hint="Your Address"
                android:inputType="textPostalAddress"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="0.06"
            android:weightSum="1">

            <TextView
                android:id="@+id/textViewBiographyUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.05"
                android:text="Tell us about yourself (max. 300 characters):"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textStyle="italic"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="0.57">

            <EditText
                android:id="@+id/editTextBiography"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="@color/colorRed"
                android:ems="10"
                android:fontFamily="sans-serif-smallcaps"
                android:maxLength="300"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="14sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="0.06"
            android:weightSum="1">

            <Button
                android:id="@+id/buttonCancel"
                android:layout_width="130dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:background="@color/colorRed"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Cancel"
                android:textColor="@color/colorBottomNavigationActiveColored"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonSaveChanges"
                android:layout_width="130dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="55dp"
                android:background="@color/colorRed"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Save changes"
                android:textColor="@color/colorBottomNavigationActiveColored"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
